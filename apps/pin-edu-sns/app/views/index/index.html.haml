:ruby
  creator_id = current_user.id

  new_upload_url = File.join(R::PSUS_UPLOAD_SITE, '/new_upload')
  send_blob_url  = File.join(R::PSUS_UPLOAD_SITE, '/upload_blob')

.page-media-file-uploader{:'data-creator-id'=>creator_id, :'data-new-upload-url'=>new_upload_url, :'data-send-blob-url'=>send_blob_url}
  .upload-drop-area
    .upload-btn-box
      %a.upload-btn{:href=>'javascript:;'} 打开文件
      = file_field_tag :file, :multiple => true
    .desc 上传视频，音频，图片或其他文件。支持1G以上大文件，支持断点续传。
    .tip 
      %span.t1 请把想要上传的文件拖放到页面上任何位置
      %span.t2 你正在拖放文件，松开鼠标按键，开始上传

  .progress-bar-sample.hide
    .file{:'data-name'=>'', :'data-size'=>''}
      .meta
        .name on_your_mark.rmvb
        .size (65.5MB)
      .bar
        .percent 26.8%
        .p{:style=>'width:26.8%;'}
      .stat
        .speed 
          %span.t 上传速度:
          %span.data 32KB/s
        .remaining-time
          %span.t 剩余时间:
          %span.data 00:32:32
      .error-info
        文件上传出错

  .uploading-files-list
